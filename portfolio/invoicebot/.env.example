# InvoiceBot Configuration
# Copy to .env and fill in your values

# App Settings
DEMO_MODE=false
DEBUG=false
DATABASE_URL=sqlite:///./invoicebot.db

# Google Cloud Vision (OCR)
GOOGLE_CREDENTIALS_FILE=google-credentials.json

# OpenAI (Categorization)
OPENAI_API_KEY=sk-your-api-key

# QuickBooks Online
QB_CLIENT_ID=your-client-id
QB_CLIENT_SECRET=your-client-secret
QB_REDIRECT_URI=http://localhost:8000/callback/quickbooks
QB_REALM_ID=your-realm-id

# Xero (alternative to QuickBooks)
# XERO_CLIENT_ID=your-client-id
# XERO_CLIENT_SECRET=your-client-secret

# Email Inbox (for email-in receipts)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=expenses@yourdomain.com
IMAP_PASSWORD=your-app-password
CHECK_EMAIL_INTERVAL=300  # seconds

# Confidence Thresholds
MIN_CONFIDENCE_AUTO_APPROVE=0.85
MIN_CONFIDENCE_SHOW=0.50
